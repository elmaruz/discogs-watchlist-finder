{
  "name": "discogs-wantlist-finder",
  "version": "1.0.0",
  "description": "Find sellers with multiple items from your Discogs wantlist",
  "private": true,
  "type": "module",
  "workspaces": [
    "lib",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build -w lib && npm run build -w backend && npm run build -w frontend",
    "start": "npm run start -w backend"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.9.3"
  }
}
